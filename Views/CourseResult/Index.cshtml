
@model List<CourseResult>
<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Add", "CourseResult")'">Add New Course Result</button>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Degree</th>
           

            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.degree</td>

                <td>
                <a href="@Url.Action("GetCourseResultbyId", "CourseResult", new { id = @item.Id })" class="btn btn-primary">Details</a>
                <a href="@Url.Action("Add", "CourseResult", new { id = @item.Id })" class="btn btn-success">Edit</a>
                <a href="#" onclick="deleteCrsDegree(@item.Id)" class="btn btn-danger">Delete</a>
                </td>
               
            </tr>
        }



    </tbody>
</table>
<script>
    function deleteCrsDegree(id) {
        if (confirm("Are you sure you want to delete Course Result?")) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "CourseResult")",
                data: { id: id },
                success: function () {
                    window.location.href = "@Url.Action("Index", "CourseResult")";
                }
            });
        }
    }
</script>
