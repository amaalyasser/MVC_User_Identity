@model Identity.Models.Instructor

@{
    ViewData["Title"] = "Add";
}

<h1>Add Instructor</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="@Url.Action(Model.Id != 0 ? "Update" : "Submit", "Instructor")">
            @Html.HiddenFor(x=>x.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Img, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Img, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Img, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Salary, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
            </div>
      
            <div class="form-group">
                @Html.LabelFor(m => m.DepartmentId, new { @class = "control-label" })
                <select name="DepartmentId" id="DepartmentId" class="form-check ">
                    <option value="0" selected>....اختر...</option>
                    @foreach (Department dept in ViewBag.departments)
                    {
                        if (Model.DepartmentId == dept.Id)
                        { 
                            <option value="@dept.Id" selected>@dept.Name</option>
                       }else
                        {
                          
                            <option value="@dept.Id">@dept.Name</option>
                        } 
                    }
               </select>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CourseId, new { @class = "control-label" })
                <select name="CourseId" id="CourseId" class="form-check ">
                    <option value="0" selected>....اختر...</option>
                    @foreach (Course Course in ViewBag.Courses)
                    {
                        if (Model.CourseId == Course.Id)
                    {
                        <option value="@Course.Id" selected>@Course.Name</option>
                    }else
                    {
                            
                            <option value="@Course.Id">@Course.Name</option>
                    }
                    }
                </select>
            </div>
            <div class="form-group">
                @if (Model.Id != 0)
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Submit" class="btn btn-primary" />
                }
                 <a href="@Url.Action("Index", "Instructor")" class="btn btn-primary">back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
