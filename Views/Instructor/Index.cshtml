<script>
    function deleteInstructor(id) {
        if (confirm("Are you sure you want to delete this instructor?")) {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "Instructor")",
                data: { id: id },
                success: function () {
                    window.location.href = "@Url.Action("Index", "Instructor")";
                }
            });
        }
    }
</script>

